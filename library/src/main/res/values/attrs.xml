<resources>

    <declare-styleable name="CircleView">
        <attr name="circleColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="text" format="string"/>
        <attr name="randomColor" format="boolean"/>
        <attr name="singleText" format="boolean"/>
        <attr name="textAngle" format="float"/>
        <attr name="speed" format="integer"/>
        <attr name="textOrientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="rotateOrientation">
            <enum name="clockwise" value="2"/>
            <enum name="anticlockwise" value="3"/>
        </attr>
    </declare-styleable>

</resources>